<NEKTAR>
    <CONDITIONS>
        <BOUNDARYREGION>
            <B ID="0"> C[1] </B>
            <B ID="1"> C[2] </B>
            <B ID="2"> C[3] </B>
            <B ID="3"> C[4] </B>
        </BOUNDARYREGION>
    </CONDITIONS>
</NEKTAR>
<NESO>
    <FLUIDS>

    </FLUIDS>

    <PARTICLES>
        <INFO>
            <I PROPERTY="PARTTYPE" VALUE="TestParticleSystem"/>
        </INFO>
        <PARAMETERS>
            <P> particle_output_freq = 1          </P>
        </PARAMETERS>

        <SPECIES>
            <S ID="0" NAME="Argon">
                <P> Mass = 40 </P>
                <P> Charge = 1.0 </P>
                <INITIAL N="100">
                    <E VAR="n" VALUE="sin(4*x)*sin(4*x)"/>
                </INITIAL>
                <SOURCE N="100">
                    <E VAR="n" VALUE="exp((-(x-2-0.75*cos(150*t))*(x-2-0.75*cos(150*t))/(0.01))+(-(y-0.75*sin(150*t))*(y-0.75*sin(150*t))/(0.01)))"/>
                </SOURCE>
                <SINK>
                    <E VAR="n" VALUE="exp((-(x-2-0.75*sin(150*t))*(x-2-0.75*sin(150*t))/(0.01))+(-(y+0.75*cos(150*t))*(y+0.75*cos(150*t))/(0.01)))"/>
                </SINK>
            </S>
            <S ID="1" NAME="Neon">
                <P> Mass = 20 </P>
                <P> Charge = 1.0 </P>
                <INITIAL N="100">
                    <E VAR="n" VALUE="sin(4*x)*sin(4*x)"/>
                </INITIAL>
            </S>
        </SPECIES>

        <BOUNDARYINTERACTION>
            <REGION REF="0">
                <C SPECIES="0"  VALUE="0.0" />
                <C SPECIES="1"  VALUE="0.0" />
            </REGION>
            <REGION REF="1">
                <C SPECIES="0"  VALUE="0.0" />
                <C SPECIES="1"  VALUE="0.0" />
            </REGION>
	        <REGION REF="2">
                <P SPECIES="0"  VALUE="[3]" />
                <P SPECIES="1"  VALUE="[3]" />
            </REGION>
            <REGION REF="3">
                <P SPECIES="0"  VALUE="[2]" />
                <P SPECIES="1"  VALUE="[2]" />
            </REGION>
        </BOUNDARYINTERACTION>

        <REACTIONS>
            <R ID="0" TYPE="Ionisation" SPECIES="0">
                <P> Rate = 10 </P>
            </R>

            <R ID="1" TYPE="Recombination" SPECIES="0">
                <P> Rate = 100 </P>
            </R>

            <R ID="2" TYPE="ChargeExchange" SPECIES="0,1">
                <P> Rate = 1000 </P>
            </R>
        </REACTIONS>
    </PARTICLES>
</NESO>